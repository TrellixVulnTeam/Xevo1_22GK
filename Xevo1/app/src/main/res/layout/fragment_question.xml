<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/text_margin"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/question_fragment"
        app:layout_constraintTop_toTopOf="parent"
        android:weightSum="11" >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:elevation="@dimen/text_margin"
        android:backgroundTint="@color/colorLightBeige">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="14">
            
            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_menu_camera"
                android:layout_weight="3"
                app:civ_border_color="@color/colorAccent"
                app:civ_border_width="2dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/avenir_regular"
                android:layout_weight="11"
                android:textAlignment="center"
                android:text="username" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
    <!-- These weights set by fibonacci sequence, so hopefully golden ratio -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"
        android:background="@color/colorLightBeige"
        android:weightSum="5">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/question_title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Question title"
            android:layout_margin="@dimen/card_elevation"
            android:ellipsize="end"
            android:fontFamily="@font/avenir_regular"
            android:textStyle="bold"
            android:maxLines="2" />


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/question_details_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/text_margin"
            android:layout_marginEnd="@dimen/text_margin"
            android:ellipsize="end"
            android:maxLines="3"
            android:fontFamily="@font/avenir_regular"
            android:text="This is what the question is about and blah blah blah blah blah question is about and blah blah blah blah blah question is about and blah blah blah blah blah"
            />
    </LinearLayout>

    </LinearLayout>

    <!-- Add a line at end if it looks good in actual color scheme -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/question_fragment"
        android:background="@color/colorBeige" />

    <Button
        android:layout_width="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/question_fragment"
        app:layout_constraintTop_toTopOf="@+id/question_fragment"
        app:layout_constraintLeft_toLeftOf="@+id/question_fragment"
        app:layout_constraintRight_toRightOf="@+id/question_fragment"
        android:background="#00000000"
        android:id="@+id/question_fragment_button"
        android:layout_height="0dp" />

</android.support.constraint.ConstraintLayout>
