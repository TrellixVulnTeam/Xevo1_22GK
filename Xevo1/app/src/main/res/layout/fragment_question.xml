<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="11" >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:elevation="@dimen/text_margin"
        android:backgroundTint="@color/colorBeige">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            
            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_menu_camera"
                app:civ_border_color="@color/colorAccent"
                app:civ_border_width="2dp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
    <!-- These weights set by fibonacci sequence, so hopefully golden ratio -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"
        android:background="@color/colorLightBeige"
        android:weightSum="5">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/question_title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Question title"
            android:layout_margin="@dimen/card_elevation"
            android:ellipsize="end"
            android:fontFamily="@font/avenir_regular"
            android:textStyle="bold"
            android:maxLines="1" />


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/questio_details_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/text_margin"
            android:layout_marginEnd="@dimen/text_margin"
            android:ellipsize="end"
            android:maxLines="3"
            android:fontFamily="@font/avenir_regular"
            android:text="This is what the question is about and blah blah blah blah blah question is about and blah blah blah blah blah question is about and blah blah blah blah blah"
             />
    </LinearLayout>


</LinearLayout>
