<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="xevo.xevo1.ChooseQuestionFragment">

    <android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <Button
            android:id="@+id/quick_hit_button"
            style="@style/whiteButtonStyle"
            android:layout_weight="1"
            android:text="@string/quick_hit" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_weight="2"
                android:background="@color/colorWhite" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_weight="1"
                android:background="@color/colorDarkGrey" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_weight="2"
                android:background="@color/colorWhite" />

        </LinearLayout>


        <Button
            android:id="@+id/talk_about_it_button"
            style="@style/whiteButtonStyle"
            android:layout_weight="1"
            android:text="@string/lets_talk_aboutit" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_weight="2"
                android:background="@color/colorWhite" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_weight="1"
                android:background="@color/colorDarkGrey" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_weight="2"
                android:background="@color/colorWhite" />

        </LinearLayout>


        <Button
            android:id="@+id/professional_opinion_button"
            style="@style/whiteButtonStyle"
            android:layout_weight="1"
            android:text="@string/professional_opinion" />

    </LinearLayout>



</android.support.constraint.ConstraintLayout>

    </FrameLayout>
