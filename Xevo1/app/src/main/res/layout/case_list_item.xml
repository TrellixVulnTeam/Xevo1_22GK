<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_view"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_gravity="center"
    android:clickable="true"
    android:focusable="true"
    android:foreground="@drawable/ripple_effect_light_background"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:transitionName="parent_view"
    android:elevation="@dimen/card_elevation"
    tools:ignore="UnusedAttribute">

    <!--<ImageView-->
        <!--android:id="@+id/caseListIcon"-->
        <!--android:layout_width="40dp"-->
        <!--android:layout_height="40dp"-->
        <!--android:layout_marginTop="16dp"-->
        <!--android:layout_marginBottom="16dp"-->
        <!--android:transitionName="case_list_icon"-->
        <!--app:srcCompat="@mipmap/ic_launcher_round" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/activity_margin_content" >

        <TextView
            android:id="@+id/caseListTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="@color/primaryTextDark"
            android:textSize="16sp"
            android:layout_marginHorizontal="5dp"
            android:transitionName="text_layanan"
            tools:text="string/item_title" />

        <TextView
            android:id="@+id/caseListDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="@color/secondaryTextDark"
            android:textSize="14sp"
            android:layout_marginHorizontal="5dp"
            android:transitionName="text_dokter"
            tools:text="string/item_desc" />

        <View
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorDarkGrey" />

    </LinearLayout>

</RelativeLayout>
