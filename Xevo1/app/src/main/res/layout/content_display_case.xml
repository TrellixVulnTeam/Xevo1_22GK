<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="xevo.xevo1.ReadQuestion">

    <fragment
        android:id="@+id/question_title"
        android:name="xevo.xevo1.ProfileAndString"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!--android:layout_height="80dp"-->

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/question_details"
        android:background="@color/colorGrey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/text_margin"
        android:textSize="@dimen/text_size_medium_small"
        android:maxLines="2"
        android:ellipsize="end"
        android:scrollbars="vertical"
        android:layout_below="@+id/question_title"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:textAlignment="center" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/primaryTextDark"
        android:fontFamily="@font/avenir_regular"
        android:layout_below="@+id/question_details"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginVertical="@dimen/activity_vertical_margin"
        android:padding="@dimen/text_margin"
        android:scrollbars="vertical"
        android:lineSpacingExtra="@dimen/text_size_small"
        android:textAlignment="center" />


