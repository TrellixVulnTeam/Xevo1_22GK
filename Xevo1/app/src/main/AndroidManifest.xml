<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="xevo.xevo1">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".QuickHit"
            android:label="@string/title_activity_quick_hit"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ProfessionalOpinion"
            android:label="@string/title_activity_professional_opinion"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TalkAboutIt"
            android:label="@string/title_activity_talk_about_it"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>